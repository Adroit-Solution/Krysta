@model Test_Series.Models.LoginModel

@{
    ViewData["Title"] = "LoginPage";
}


<div class=container>
    <h4>LoginModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label><br />
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br />
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div><br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div><br />
            <div class="form-group">
                <input type="submit" value="LogIn" class="btn btn-success" />
                <a class="btn btn-warning" asp-area="" asp-controller="Account" asp-action="SignUpIndex">SignUp</a>
            </div>
        </form>
    </div>
</div>
</div>
